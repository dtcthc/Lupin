import pygame

class PerroB (pygame.sprite.Sprite):
    def __init__(self):
        pygame.sprite.Sprite.__init__(self)
        self.imagen_perroB = pygame.image.load("img/PerroB.png")
        self.rect = self.imagen_perroB.get_rect()
        self.rect.centerx = 30
        self.rect.centery= 50
        self.velocidad = 11

    def dibujar(self,superficie):
        superficie.blit(self.imagen_perroB, self.rect)
